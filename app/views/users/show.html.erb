<h3> Show </h3>
<%= gravatar_for(@user)%>

<% @posts.each do |post| %>
  <div>
    <span><%= post.title %></span>
    <span><%= post.url %></span>
    <span><%= post.description %></span>
  </div>
  <div>
    <%= link_to "show", post_path(post) %>
    <% if user_signed_in? %>

      <%= link_to like_post_path(post) do %>
        "Like"
        <%= post.get_likes.size %>
      <% end %>

      <% if post.user_id == current_user.id %>

        <% if post.share %>
          <%= link_to "unshare", share_post_path(post), method: :put %>
        <% else %>
          <%= link_to "share", share_post_path(post), method: :put %>
        <% end %>

        <%= link_to "Edit", edit_post_path(post) %>
        <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?!" } %>
      <% end %>
    <% end %>
  </div>
<% end %>
