<div class="yield_content">
  <div class="group_show">

    <div class="group_detail">

      <h3><%= @group.name %></h3>
      <span><%= @group.description %></span>


      <% if current_user == @user %>
        <div class="group_action">
          <%= link_to edit_user_group_path(@user, @group) do %>
            <span class="fa fa-edit"></span>
          <% end %>
          <%= link_to user_group_path(@user, @group), method: :delete, data: { confirm: "Are you sure?" } do %>
            <span class="fa fa-trash-o"></span>
          <% end %>
        </div>
      <% end %>

    </div>

    <% @posts.each do |post| %>
      <%= render partial: 'shared/show_post', locals: { post: post } %>
    <% end %>

    <% if user_signed_in? && current_user == @user %>
      <div class="some_buttons">
        <%= link_to "New Post", new_post_path, class: "button button-highlight-o" %>
      </div>
    <% end %>

  </div>
</div>
