<div class="group_form_page">
  <div class="form">
    <%= form_for [current_user, @group] do |f| %>

      <div class="form_row">
        <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
      </div>
      <div class="form_row">
        <%= f.text_area :description, placeholder: "Description" %>
      </div>

      <div class="form_row">
        <div class="action">
          <%= f.button button_name, class: "button button-highlight-o" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
