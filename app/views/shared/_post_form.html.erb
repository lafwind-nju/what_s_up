<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :share %>
  <%= f.check_box :share%>

  <%= f.label :select_group %>
  <%= f.select(:group_id, options_for_select(@group_options, @selected_id)) %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.button "Submit" %>
<% end %>
