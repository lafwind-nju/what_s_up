<div class="post_form_page">
  <div class="form">

    <%= form_for @post do |f| %>
      <div class="form_row">
        <%= f.text_field :title, autofocus: true, placeholder: "Title" %>
      </div>

      <div class="form_row">
        <%= f.text_field :url, placeholder: "URL" %>
      </div>

      <div class="form_row">
        <%= f.label :share %>
        <%= f.check_box :share%>
      </div>

      <div class="form_row">
        <%= f.label :select_group %>
        <%= f.select(:group_id, options_for_select(@group_options, @selected_id)) %>
        <%= link_to "New Group", new_user_group_path(current_user) %>
      </div>


      <div class="form_row">
        <%= f.text_area :description, placeholder: "Description: (Maximum: 50 characters)" %>
      </div>

      <div class="form_row">
        <div class="action">
          <%= f.button button_name, class: "button button-highlight-o" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
