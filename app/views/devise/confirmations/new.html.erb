<div class="form_page">

  <div class="form">
    <%#= link_to "Whatsup", root_path, class: "logo" %>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

      <div class="devise_error_msg">
        <%= devise_error_messages! %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>

      <div class="actions">
        <%= f.button "Resend confirmation instructions", class: "button button-highlight" %>
      </div>
    <% end %>
  </div>


  <div class="other_form_links">
    <%= render "devise/shared/links" %>
  </div>

</div>
