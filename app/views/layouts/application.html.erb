<!DOCTYPE html>
<html>
<head>
  <title>WhatSUp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if notice %>
    <%= notice %>
  <% end %>

  <% if alert %>
    <%= alert %>
  <% end %>

  <% unless current_page?(new_user_session_path) || current_page?(new_user_registration_path) || current_page?(new_user_password_path) ||
    current_page?(new_user_confirmation_path) || (params[:controller] == 'static_pages' && params[:action] == 'home') %>

    <%= render "shared/header" %>
  <% end %>

  <%= yield %>

</body>
</html>
